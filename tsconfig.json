{
    "compilerOptions": {
        "lib": ["es2017"],
        "removeComments": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "lib",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@services/*": ["src/services/*"],
            "@exceptions/*": ["src/exceptions/*"],
            "@functions/*": ["src/functions/*"],
            "@types/*": ["src/@types/*"],
            "@models/*": ["src/models/*"],
            "@config/*": ["src/config/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ]
}
